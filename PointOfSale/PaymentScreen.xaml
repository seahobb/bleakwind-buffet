<UserControl x:Class="PointOfSale.PaymentScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Name="paymentGrid">
        <Canvas Background="White" Grid.ColumnSpan="2">
            <StackPanel>
                <Button Name="cd" HorizontalAlignment="Right" Click="CreditDebit" Content="Credit/Debit" Width="200" Height="50" FontSize="14" VerticalAlignment="Center" Margin="40"/>
                <Button HorizontalAlignment="Right" Click="Cash" Content="Cash" Width="200" Height="50" FontSize="14" VerticalAlignment="Center" Margin="40"/>
            </StackPanel>
            <Border Name="PaymentContainerBorder" Width="600" Height="450"/>
        </Canvas>
    </Grid>
</UserControl>
